# Kiosk Mode Configuration File
# Copy this file to 'kiosk.conf' and modify settings as needed.
# The bot will automatically load kiosk.conf if it exists.

[kiosk]
# Enable kiosk mode (true/false)
# When enabled, model selection and most settings are locked
enabled = true

# The model to use in kiosk mode
# Examples: gpt-4o, gpt-4o-mini, openrouter:google/gemini-2.0-flash-001
model = openrouter:google/gemini-2.0-flash-001

# Path to the system prompt file (supports multi-line prompts)
# Leave empty or comment out to run without a system prompt
prompt_file = kiosk_prompt_example.txt

# Inactivity timeout in seconds (0 = disabled)
# Automatically clears conversation after this period of inactivity
inactivity_timeout = 3600

[logging]
# Chat logging levels: off, minimum (text only), extended (text + attachments)
# You can set separate log levels for user and assistant messages
# This allows fine-grained control over what gets logged
# Default: off (no logging)

# User messages logging level
log_user_messages = off

# Assistant messages logging level
log_assistant_messages = off

# Legacy single log level (deprecated but supported for backward compatibility)
# If log_user_messages and log_assistant_messages are not set, this will be used for both
# log_chats = off

# Directory where chat logs are saved
# Logs are organized by username and timestamped
# Default: ./chat_logs
log_directory = ./chat_logs

[PluginConfig]
# Enable the plugin system (true/false)
# When enabled, the bot will load kiosk-custom.py if present
# Plugins provide extensible AI-powered transformations and custom logic
enabled = true

# Maximum execution time for plugin hooks in seconds
# Hooks that exceed this timeout will be cancelled
timeout = 5.0

# Maximum number of failures before plugin is automatically disabled
# Helps prevent poorly-behaved plugins from disrupting the bot
max_failures = 3

# Enable debug logging for plugin execution
# Useful for plugin development and troubleshooting
debug = false
